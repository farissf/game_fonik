<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MusikActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:orientation="horizontal"
        android:fillViewport="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="100dp"
            android:columnCount="3"
            android:rowCount="3"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp">

            <Button
                android:id="@+id/drum"
                android:background="@drawable/drum" />

            <Button
                android:id="@+id/gitar"
                android:background="@drawable/gitar"
                android:layout_marginLeft="40dp"/>

            <Button
                android:id="@+id/bass"
                android:background="@drawable/bass"
                android:layout_gravity="right"/>

            <Button
                android:id="@+id/flute"
                android:background="@drawable/flute"
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/piano"
                android:background="@drawable/piano"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/suling"
                android:background="@drawable/suling"
                android:layout_gravity="right"
                android:layout_marginTop="40dp"/>

        </GridLayout>
    </ScrollView>
</LinearLayout>
