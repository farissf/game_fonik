<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <ImageView
        android:background="@drawable/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi pembelajaran metode fonik"
        android:layout_marginTop="110dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_mulai"
        android:onClick="terapi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_carapenggunaan"
        android:onClick="carapenggunaan" />

    <Button
        android:id="@+id/keluarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_keluar"
        android:onClick="keluar"/>


</LinearLayout>