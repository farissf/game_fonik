<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="110dp"
        android:layout_height="42dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_kembali" />

    <TextView
        android:id="@+id/soalimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/suaraBtn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:background="@drawable/audio"
             />
        <Button
            android:id="@+id/infoBtn1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="info 1"
            />

        <Button
            android:id="@+id/infoBtn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@color/main_orange_color"
            android:text="Info 2"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/testText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/jawabanTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="jawabannya disini"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/micBtn"
        android:layout_width="94dp"
        android:layout_height="93dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/micbtn"
        android:onClick="getSpeechInput" />

</LinearLayout>